<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="cn.com.brilliance.begen.model.SysMenu"
        table="sys_menu"
        select-before-update="false"
        dynamic-update="true"
        dynamic-insert="true"
        optimistic-lock="all"
    >
		<id
            name="id"
            column="id"
            type="java.lang.String"
            length="32"
        >
            <generator class="uuid.hex" />
        </id>
        <property
            name="app"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="app"
            length="250"
            unique="false"
        />
        <property
            name="mlevel"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="mlevel"
            length="250"
            unique="false"
        />
        <property
            name="label"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="label"
            length="50"
            unique="false"
        />
        <property
            name="parentMenu"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="parent_menu"
            length="250"
            unique="false"
        />
        <property
            name="url"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="url"
            length="1000"
            unique="false"
        />
        <property
            name="authority"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            access="property"
            column="authority"
            length="250"
            unique="false"
        />
        <property
            name="partyId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="party_id"
            length="20"
            unique="false"
        />
        <property
            name="urlDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="url_description"
            length="255"
            unique="false"
        />
        <property
            name="sysRecordOrder"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="sys_record_order"
            unique="false"
        />

<!-- imported bi-directional many-to-one association -->
		<many-to-one
			column="app"
			name="appOfSysApp"
			class="cn.com.brilliance.begen.model.SysApp"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
		<many-to-one
			column="party_id"
			name="partyIdOfSysParty"
			class="cn.com.brilliance.begen.model.SysParty"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
    </class>
</hibernate-mapping>
