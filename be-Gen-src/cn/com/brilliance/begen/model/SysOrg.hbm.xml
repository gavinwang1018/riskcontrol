<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="cn.com.brilliance.begen.model.SysOrg"
        table="sys_org"
        select-before-update="false"
        dynamic-update="true"
        dynamic-insert="true"
        optimistic-lock="all"
    >
		<id
            name="id"
            column="[id]"
            type="java.lang.String"
            length="32"
        >
            <generator class="uuid.hex" />
        </id>
        <property
            name="orgId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[org_id]"
            length="20"
            unique="false"
        />
        <property
            name="orgName"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[org_name]"
            length="50"
            unique="false"
        />
        <property
            name="parentOrg"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[parent_org]"
            length="250"
            unique="false"
        />
        <property
            name="masterOrg"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[master_org]"
            length="250"
            unique="false"
        />
        <property
            name="partyId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[party_id]"
            length="20"
            unique="false"
        />
 <!-- Imported bi-directional one-to-many association to SysUser -->
	<set name="sysUserGroup"
	     table="sys_user"
	     lazy="true"
	     inverse="true"
	     cascade="delete"
 	     sort="unsorted"
	>
		<key>
			<column name="org_id"/>
		</key>
		<one-to-many
			class="cn.com.brilliance.begen.model.SysUser"
		/>
	</set>     

<!-- imported bi-directional many-to-one association -->
		<many-to-one
			column="party_id"
			name="partyIdOfSysParty"
			class="cn.com.brilliance.begen.model.SysParty"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
    </class>
</hibernate-mapping>
