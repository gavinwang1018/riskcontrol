<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="cn.com.brilliance.begen.model.SysPortalDef"
        table="sys_portal_def"
        select-before-update="false"
        dynamic-update="true"
        dynamic-insert="true"
        optimistic-lock="all"
    >
		<id
            name="id"
            column="[id]"
            type="java.lang.String"
            length="32"
        >
            <generator class="uuid.hex" />
        </id>
        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[description]"
            length="250"
            unique="false"
        />
        <property
            name="cols"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[cols]"
            length="250"
            unique="false"
        />
        <property
            name="label"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[label]"
            length="50"
            unique="false"
        />
        <property
            name="widthFst"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[width_fst]"
            length="250"
            unique="false"
        />
        <property
            name="widthSec"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[width_sec]"
            length="250"
            unique="false"
        />
        <property
            name="widthThd"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[width_thd]"
            length="250"
            unique="false"
        />
        <property
            name="partyId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[party_id]"
            length="20"
            unique="false"
        />
        <property
            name="portalId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[portal_id]"
            length="20"
            unique="false"
        />
 <!-- Imported bi-directional one-to-many association to SysPortletDef -->
	<set name="sysPortletDefGroup"
	     table="sys_portlet_def"
	     lazy="true"
	     inverse="true"
	     cascade="delete"
 	     sort="unsorted"
	     order-by="sys_record_order asc"
	>
		<key>
			<column name="portal_id"/>
		</key>
		<one-to-many
			class="cn.com.brilliance.begen.model.SysPortletDef"
		/>
	</set>     

<!-- imported bi-directional many-to-one association -->
		<many-to-one
			column="party_id"
			name="partyIdOfSysParty"
			class="cn.com.brilliance.begen.model.SysParty"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
    </class>
</hibernate-mapping>
