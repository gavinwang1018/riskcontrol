<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
    <class
        name="cn.com.brilliance.begen.model.SysSection"
        table="sys_section"
        select-before-update="false"
        dynamic-update="true"
        dynamic-insert="true"
        optimistic-lock="all"
    >
		<id
            name="id"
            column="[id]"
            type="java.lang.String"
            length="32"
        >
            <generator class="uuid.hex" />
        </id>
        <property
            name="formLayout"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[form_layout]"
            length="250"
            unique="false"
        />
        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[name]"
            length="50"
            unique="false"
        />
        <property
            name="partyId"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[party_id]"
            length="20"
            unique="false"
        />
        <property
            name="sectionText"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[section_text]"
            length="250"
            unique="false"
        />
        <property
            name="detailHeading"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[detail_heading]"
            length="20"
            unique="false"
        />
        <property
            name="sectionType"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[section_type]"
            length="20"
            unique="false"
        />
        <property
            name="editHeading"
            type="java.lang.String"
            update="true"
            insert="true"
            access="property"
            column="[edit_heading]"
            length="20"
            unique="false"
        />
        <property
            name="numColumns"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="[num_columns]"
            length="250"
            unique="false"
        />
        <property
            name="maxRow"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="[max_row]"
            length="250"
            unique="false"
        />
        <property
            name="sysRecordOrder"
            type="java.lang.Integer"
            update="true"
            insert="true"
            access="property"
            column="sys_record_order"
            unique="false"
        />
 <!-- Imported bi-directional one-to-many association to SysItem -->
	<set name="sysItemGroup"
	     table="sys_item"
	     lazy="true"
	     inverse="true"
	     cascade="delete"
 	     sort="unsorted"
	>
		<key>
			<column name="section"/>
		</key>
		<one-to-many
			class="cn.com.brilliance.begen.model.SysItem"
		/>
	</set>     

<!-- imported bi-directional many-to-one association -->
		<many-to-one
			column="form_layout"
			name="formLayoutOfSysFormLayout"
			class="cn.com.brilliance.begen.model.SysFormLayout"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
		<many-to-one
			column="party_id"
			name="partyIdOfSysParty"
			class="cn.com.brilliance.begen.model.SysParty"
            not-null="false"
	        update="false"
	        insert="false"
			not-found="ignore"
			lazy="proxy"
		/>	
    </class>
</hibernate-mapping>
